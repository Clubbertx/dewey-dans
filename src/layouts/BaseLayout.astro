---
interface Props {
  title?: string;
}

const { title = "Dewey Dan's Hot Sauce" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta
      name="description"
      content="Dewey Dan's Hot Sauce â€” handcrafted small-batch hot sauces for every heat level."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <!-- Cart overlay & slide-out panel -->
    <div id="cart-overlay" class="cart-overlay"></div>
    <div id="cart-panel" class="cart-panel">
      <div class="cart-header">
        <h3>Your Cart</h3>
        <button id="cart-close" class="cart-close-btn" aria-label="Close cart">&times;</button>
      </div>
      <div id="cart-items" class="cart-items"></div>
      <div class="cart-footer">
        <div class="cart-total-row">
          <span>Total</span>
          <span id="cart-total" class="cart-total-amount">$0.00</span>
        </div>
        <button class="cart-checkout-btn" onclick="alert('Checkout coming soon bitches!')">Checkout</button>
      </div>
    </div>

    <script is:inline src="/cart.js"></script>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --color-bg: #ffffff;
    --color-text: #1a1a1a;
    --color-accent: #c41e3a;
    --color-accent-hover: #a3182f;
    --color-secondary: #f5f5f5;
    --color-border: #e0e0e0;
    --font-stack: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Helvetica, Arial, sans-serif;
    --max-width: 1200px;
    --radius: 8px;
  }

  html {
    font-family: var(--font-stack);
    color: var(--color-text);
    background: var(--color-bg);
    scroll-behavior: smooth;
    -webkit-scroll-behavior: smooth;
    -webkit-text-size-adjust: 100%;
  }

  body {
    min-height: 100vh;
    line-height: 1.6;
  }

  img {
    max-width: 100%;
    display: block;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  button {
    cursor: pointer;
    font-family: inherit;
  }

  /* Cart overlay */
  .cart-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 998;
    opacity: 0;
    visibility: hidden;
    -webkit-transition: opacity 0.3s, visibility 0.3s;
    transition: opacity 0.3s, visibility 0.3s;
  }

  .cart-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Cart slide-out panel */
  .cart-panel {
    position: fixed;
    top: 0;
    right: 0;
    width: 360px;
    max-width: 90vw;
    height: 100%;
    background: #fff;
    z-index: 999;
    display: flex;
    flex-direction: column;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
    -webkit-transform: translateX(100%);
    transform: translateX(100%);
    -webkit-transition: transform 0.3s ease;
    transition: transform 0.3s ease;
  }

  .cart-panel.active {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }

  .cart-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .cart-header h3 {
    font-size: 1.1rem;
    font-weight: 700;
  }

  .cart-close-btn {
    background: none;
    border: none;
    font-size: 1.6rem;
    color: #666;
    padding: 0;
    line-height: 1;
  }

  .cart-items {
    flex: 1;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    padding: 1rem 1.5rem;
  }

  .cart-empty {
    color: #999;
    text-align: center;
    padding: 3rem 0;
    font-size: 0.95rem;
  }

  .cart-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .cart-item-info {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .cart-item-name {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .cart-item-price {
    font-size: 0.8rem;
    color: #666;
  }

  .cart-item-controls {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .cart-qty-btn {
    width: 26px;
    height: 26px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    background: #fff;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
  }

  .cart-qty {
    font-size: 0.85rem;
    font-weight: 600;
    min-width: 20px;
    text-align: center;
  }

  .cart-remove-btn {
    background: none;
    border: none;
    color: #999;
    font-size: 1.2rem;
    padding: 0 0.25rem;
    margin-left: 0.25rem;
  }

  .cart-remove-btn:hover {
    color: var(--color-accent);
  }

  .cart-footer {
    padding: 1.25rem 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .cart-total-row {
    display: flex;
    justify-content: space-between;
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .cart-checkout-btn {
    width: 100%;
    padding: 0.85rem;
    background: var(--color-accent);
    color: #fff;
    border: none;
    border-radius: var(--radius);
    font-size: 1rem;
    font-weight: 600;
    -webkit-transition: background 0.2s;
    transition: background 0.2s;
  }

  .cart-checkout-btn:hover {
    background: var(--color-accent-hover);
  }
</style>
