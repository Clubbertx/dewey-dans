---
const navLinks = [
  { label: "Home", href: "#" },
  { label: "Shop", href: "#products" },
  { label: "About", href: "#about" },
  { label: "Contact", href: "#footer" },
];
---

<header class="header">
  <div class="header-inner">
    <a href="#" class="logo">
      <span class="logo-icon">ðŸ”¥</span>
      <span class="logo-text">Dewey Dan's</span>
    </a>
    <nav>
      {navLinks.map((link) => <a href={link.href} class="nav-link">{link.label}</a>)}
      <button id="cart-toggle" class="cart-toggle" aria-label="Open cart">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
        <span id="cart-badge" class="cart-badge" style="display:none">0</span>
      </button>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--color-border);
  }

  .header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.4rem;
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .logo-icon {
    font-size: 1.6rem;
  }

  .logo-text {
    color: var(--color-accent);
  }

  nav {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-text);
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  .cart-toggle {
    position: relative;
    background: none;
    border: none;
    color: var(--color-text);
    padding: 0.25rem;
    transition: color 0.2s;
    display: flex;
    align-items: center;
  }

  .cart-toggle:hover {
    color: var(--color-accent);
  }

  .cart-badge {
    position: absolute;
    top: -6px;
    right: -8px;
    background: var(--color-accent);
    color: #fff;
    font-size: 0.65rem;
    font-weight: 700;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  @media (max-width: 600px) {
    .header-inner {
      padding: 1rem;
    }

    nav {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.85rem;
    }
  }
</style>
